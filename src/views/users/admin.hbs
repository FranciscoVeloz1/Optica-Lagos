<div id="layoutSidenav">
    {{>sidebar}}

    <div id="layoutSidenav_content">
        {{>message}}
        <div class="container-fluid">
            <h2 class="mt-4 mb-3">Administradores</h2>
            <div class="breadcrumb mb-4 row justify-content-between aling-items-center">
                <div class="breadcrumb-item ">Lista de administradores</div>

                <div class="">
                    <button type="button" id="admin_excel" class="btn btn-primary btn-sm">
                        <i class="fas fa-file-excel"></i>
                    </button>

                </div>
            </div>
        </div>

        <div class="card-body col-xl-10">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" style="font-size: 14px;">
                    <thead>
                        <tr>
                            <th class="text-left">ID</th>
                            <th>Usuario</th>
                            <th>Nombre</th>
                            <th>Email</th>
                            <th>Rol</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each admin}}
                        <tr>
                            <td class="text-left">{{id_user}}</td>
                            <td>{{user}}</td>
                            <td>{{fullname}}</td>
                            <td>{{email}}</td>
                            <td>{{role}}</td>
                            <td>
                                <!--BOTÓN ACCIONES-->
                                <div class="btn-group dropleft">
                                    <div>
                                        <a href="/admin/admins/edit/{{id_user}}"
                                            class="btn btn-size-right btn-info ml-1">
                                            Editar
                                        </a>
                                    </div>

                                    <div>
                                        <a href="/admin/admins/delete/{{id_user}}"
                                            onclick="return confirm('¿Quieres eliminar a {{user}}?')"
                                            class="btn btn-size-right btn-danger ml-1" id="btn-delete">
                                            Eliminar
                                        </a>
                                    </div>
                                </div>
                                <!--END BOTÓN ACCIONES-->
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

        {{>admin_footer}}
    </div>
</div>


