{{>sidebar}}

<div id="content">
    {{>navigation}}
    {{>message}}

    <div class="container menu_info mt-5">
        <div class="row">
            <div class="col-md-10 col-xl-8 mx-auto">
                <div class="card text-center">
                    <div class="card-header">
                        <h3>Agregar orden</h3>
                    </div>

                    <div class="card-body">
                        <form action="/admin/orden/add/{{id}}" method="POST">

                            <div class="row">
                                <div class="col-lg-6 col-md-12">
                                    <div class="form-group">
                                        <input type="text" name="derecho" placeholder="Derecho" class="form-control" />
                                    </div>

                                    <div class="form-group">
                                        <input type="text" name="izquierdo" placeholder="Izquierdo"
                                            class="form-control" />
                                    </div>
                                    <div class="form-group">
                                        <input type="text" name="addp" placeholder="Adicion" class="form-control" />
                                    </div>

                                    <div class="form-group">
                                        <input type="text" name="material" placeholder="Material"
                                            class="form-control" />
                                    </div>
                                </div>

                                <div class="col-lg-6 col-md-12">
                                    <div class="form-group text-left">
                                        <h5 style="color: #767f86;">Fecha de entrega</h5>
                                        <input type="date" name="entrega" placeholder="Entrega" class="form-control" />
                                    </div>

                                    <div class="form-group">
                                        <input type="text" name="precio" placeholder="Precio" class="form-control" />
                                    </div>

                                    <div class="form-group">
                                        <input type="text" name="anticipo" placeholder="Anticipo"
                                            class="form-control" />
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <button class="btn btn-primary btn-block">
                                    Guardar
                                </button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/index.js"></script>