{{>message}}

<div id="agendar" class="text-center mt-4">
    <h2>Agendar cita</h2>
</div>

<div class="container mt-5 mb-5">
    <div class="row">
        <div id="form-agendar" class="col-md-6 col-xl-4 mx-auto">
            <form action="/user/citas/add" method="post">
                <div class="form-group">
                    <p>Fecha</p>
                    <input type="date" name="fecha" id="fecha" min="{{day}}" placeholder="Fecha" class="form-control" />
                </div>

                <div class="form-group">
                    <p>Hora</p>
                    <select name="hora" id="hora" placeholder="Hora" class="form-control">
                    </select>
                </div>

                <div class="form-group mt-5">
                    <button class="btn btn-primary btn-block">
                        Agendar
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

