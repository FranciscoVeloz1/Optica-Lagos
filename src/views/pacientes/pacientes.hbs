<div id="layoutSidenav">
    {{>sidebar}}
    {{>message}}

    <div id="layoutSidenav_content">
        <div class="container-fluid">
            <h1 class="mt-4">Pacientes</h1>
            <div class="breadcrumb mb-4 row justify-content-between aling-items-center">
                <div class="breadcrumb-item ">Seccion de pacientes</div>

                <div class="">
                    <button type="button" id="paciente_excel" class="btn btn-primary btn-sm">
                        <i class="fas fa-file-excel"></i>
                    </button>

                    <button type="button" class="btn btn-primary btn-sm">
                        <i class="fas fa-file-pdf"></i>
                    </button>

                    <a href="/admin/pacientes/add" class="btn btn-primary btn-sm" style="margin-left: 10px;">
                        <i class="fas fa-plus-square"></i> Agregar paciente
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body col-xl-12">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" style="font-size: 14px;">
                    <thead>
                        <tr>
                            <th class="text-left">ID</th>
                            <th>Nombre</th>
                            <th>Edad</th>
                            <th>Direccion</th>
                            <th>Colonia</th>
                            <th>Telefono</th>
                            <th>Fecha</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each paciente}}
                        <tr>
                            <td class="text-left">{{id_paciente}}</td>
                            <td>
                                <a href="/admin/pacientes/antecedentes/{{id_paciente}}" class="link-paciente">
                                    {{nombre}} {{apellidop}} {{apellidom}}
                                </a>
                            </td>
                            <td>{{edad}}</td>
                            <td>{{direccion}}</td>
                            <td>{{colonia}}</td>
                            <td>{{telefono}}</td>
                            <td>{{fecha}}</td>
                            <td>
                                <!--BOTÓN ACCIONES-->
                                <div class="btn-group dropleft">
                                    <div>
                                        <a href="/admin/orden/add/{{id_paciente}}"
                                            class="btn btn-size-right btn-primary">
                                            Ordenes
                                        </a>
                                    </div>

                                    <div>
                                        <a href="/admin/pacientes/edit/{{id_paciente}}"
                                            class="btn btn-size-right btn-info ml-1">
                                            Editar
                                        </a>
                                    </div>

                                    <div>
                                        <a href="/admin/pacientes/delete/{{id_paciente}}"
                                            onclick="return confirm('¿Quieres eliminar a {{nombre}}?')"
                                            class="btn btn-size-right btn-danger ml-1" id="btn-delete">
                                            Eliminar
                                        </a>
                                    </div>
                                </div>
                                <!--END BOTÓN ACCIONES-->
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

