{{>sidebar}}

<div id="content">
    {{>navigation}}
    {{>message}}

    <div class="container menu_info mt-5">
        <div class="row">
            <div class="col-md-8 col-xl-4 mx-auto">
                <div class="card text-center">
                    <div class="card-header">
                        <h3>Agregar antecedentes</h3>
                    </div>
                    <div class="card-body">
                        <form action="/admin/pacientes/antecedentes/add/{{paciente.id_paciente}}" method="POST">

                            <div class="form-group text-left">
                                <h5 style="color: #767f86;">Diabetes</h5>
                                <select name="diabetes" class="form-control">
                                    <option value="No">No</option>
                                    <option value="Si">Si</option>
                                </select>
                            </div>

                            <div class="form-group text-left">
                                <h5 style="color: #767f86;">Hipertension</h5>
                                <select name="hipertension" class="form-control">
                                    <option value="No">No</option>
                                    <option value="Si">Si</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <input type="text" name="otro" placeholder="Otro" class="form-control" />
                            </div>

                            <div class="form-group">
                                <input type="text" name="tiempo" placeholder="Tiempo" class="form-control" />
                            </div>

                            <div class="form-group text-left">
                                <h5 style="color: #767f86;">Lentes</h5>
                                <select name="lentes" class="form-control">
                                    <option value="No">No</option>
                                    <option value="Si">Si</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <input type="text" name="derecho" placeholder="Derecho" class="form-control" />
                            </div>

                            <div class="form-group">
                                <input type="text" name="izquierdo" placeholder="Izquierdo" class="form-control" />
                            </div>

                            <div class="form-group">
                                <input type="text" name="adiacion" placeholder="Adicion" class="form-control" />
                            </div>

                            <div class="form-group">
                                <button class="btn btn-oxford btn-block">
                                    Guardar
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/index.js"></script>