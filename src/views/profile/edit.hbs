{{>navbar}}
{{>message}}
<div class="container menu_info mt-5 mb-5">
    <div class="row">
        <div class="col-md-5 col-xl-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Editar perfil</h3>
                </div>

                <div class="card-body">
                    <form action="/profile/edit" method="POST">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <input type="text" name="user" value="{{user.user}}" placeholder="Usuario"
                                        class="form-control" required />
                                </div>

                                <div class="form-group">
                                    <input type="text" name="fullname" value="{{user.fullname}}" placeholder="Fullname"
                                        class="form-control" required />
                                </div>
                                <div class="form-group">
                                    <input type="text" name="email" value="{{user.email}}" placeholder="Email"
                                        class="form-control" required />
                                </div>

                                <div class="form-group">
                                    <input type="text" name="password" value="{{user.password}}" placeholder="Password"
                                        class="form-control" required />
                                </div>

                                <div class="form-group">
                                    <input type="text" name="role" value="{{user.role}}" placeholder="Role"
                                        class="form-control" required />
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-primary btn-block">
                                Editar
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{{!-- own scripts --}}
<script type="module" src="/js/index.js"></script>